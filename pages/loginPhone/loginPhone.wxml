<!--pages/loginPhone/loginPhone.wxml-->
<view class='container'>
  <view class="input_cell">
    <van-cell-group>
      <van-field
        value="{{ phone }}"
        center
        clearable
        type="number"
        label="手机号码"
        placeholder="请输入手机号码"
        use-button-slot
        bind:input="getInputPhone"
        >
        <van-button slot="button" size="small" bind:click="getCaptcha" disabled='{{ captchaDisabled }}'>{{ captchaText }}</van-button>
      </van-field>
      <van-field
        value="{{ captcha }}"
        center
        clearable
        type="number"
        label="验证码"
        placeholder="请输入手机验证码"
        bind:input="getInputCaptcha"
        />
    </van-cell-group>
    <button class='login_in' bindtap='login'>登录</button>
  </view>
</view>