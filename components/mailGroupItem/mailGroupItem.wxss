.main_item_container {
  position: relative;
  display: flex;
  flex-flow: nowrap;
  height: 70px;
  background-color: #fff;
  border-bottom: 1px solid #f1f1f1;
}
.main_item_container:last-child:after {
  display: none;
}
.main_item_container .left {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 0 0 58px;
}
.main_item_container .left .icon {
  height: 30px;
  width: 30px;
  border-radius: 15px;
}
.main_item_container .right {
  position: relative;
  display: flex;
  flex: 1;
  flex-flow: column;
  justify-content: center;
  padding-right: 110px;
}
.main_item_container .right .title {
  color: #333;
  font-size: 16px;
  width: 100%;
  font-weight: normal;
  height: 24px;
  line-height: 24px;
}
.main_item_container .right .desc {
  font-size: 12px;
  color: #999;
  height: 20px;
  line-height: 20px;
}
.main_item_container .right .time {
  position: absolute;
  right: 10px;
  top: 15px;
  font-size: 12px;
  color: #999;
  line-height: 24px;
}
.main_item_container .right .mail_num_icon {
  position: absolute;
  padding: 0 5px;
  height: 16px;
  display: block;
  font-style: normal;
  background-color: #e7534a;
  border-radius: 8px;
  font-size: 12px;
  color: #fff;
  text-align: center;
  line-height: 16px;
  right: 10px;
  top: 40px;
}
