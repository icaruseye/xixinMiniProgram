@import '../../app.wxss';
.step_wrapper {
  min-height: 150px;
  position: relative;
  background: #fff;
  padding: 40rpx 30rpx 40rpx 100rpx;
}
.step_wrapper .step_item {
  position: relative;
  font-size: 30rpx;
  color: #666;
  padding-bottom: 40rpx;
}
.step_wrapper .step_item:last-child {
  padding-bottom: 0;
}
.step_wrapper .step_item .step_item_title {
  padding: 10rpx 0;
  color: #333333;
}
.step_wrapper .step_item .step_item_content .sub_item {
  position: relative;
  padding-top: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid rgba(233, 233, 233, 0.3);
}
.step_wrapper .step_item .step_item_content .sub_item:first-child {
  padding-top: 0;
}
.step_wrapper .step_item .step_item_content .sub_item .sub_item_title.active {
  color: #3ecccc;
}
.step_wrapper .step_item .step_item_content .sub_item .sub_item_title {
  display: flex;
  align-items: center;
  position: relative;
  font-size: 12px;
  color: #666;
}
.step_wrapper .step_item .step_item_content .sub_item .sub_item_title .name {
  font-size: 26rpx;
}
.step_wrapper .step_item .step_item_content .sub_item .sub_item_title .tag {
  display: block;
  height: 22rpx;
  line-height: 22rpx;
  margin-left: 10rpx;
  padding: 2rpx 4rpx;
  font-size: 20rpx;
  color: #F8A519;
  border: 1rpx solid #F8A519;
  border-radius: 4rpx;
}
.step_wrapper .step_item .step_item_content .sub_item_time {
  font-size: 24rpx;
  color: #999;
}
.step_wrapper .step_item .iconfont {
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #ccc;
}
.step_wrapper .step_item .step__line {
  position: absolute;
  top: 0;
  left: -60rpx;
  width: 2rpx;
  height: 100%;
  background-color: rgba(237, 237, 238, 0.5);
}
.step_wrapper .step_item:last-child::before {
  content: '';
  position: absolute;
  width: 2rpx;
  height: 30rpx;
  background-color: #EDEDEE;
  top: 0;
  left: -60rpx;
  z-index: 1;
}
.step_wrapper .step_item:first-child::before {
  content: '';
  position: absolute;
  width: 2rpx;
  height: 30rpx;
  background-color: #fff;
  top: 0;
  left: -60rpx;
  z-index: 1;
}
.step_wrapper .step_item .step__circle {
  position: absolute;
  top: 30rpx;
  left: -68rpx;
  z-index: 2;
  display: block;
  width: 6rpx;
  height: 6rpx;
  background-color: #D8D8D8;
  border: 6rpx solid #F1F1F1;
  border-radius: 50%;
}

.play_icon {
  position: absolute;
  right: 0;
  width: 36rpx;
  height: 36rpx;
}