/**app.wxss**/
.tab_bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}

.empty_box {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  padding: 20rpx 0;
  text-align: center;
  min-height: 150px;
}

.empty_box .icon {
  width: 220rpx;
  height:220rpx;
  margin:20rpx 0;
}

.empty_box .text {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}